{
  "name": "papacore",
  "version": "1.0.0",
  "description": "A custom TypeScript/JSX build tool for creating components compatible with Datacore's custom Preact runtime",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/FrBosquet/papacore.git"
  },
  "bugs": {
    "url": "https://github.com/FrBosquet/papacore/issues"
  },
  "homepage": "https://github.com/FrBosquet/papacore#readme",
  "scripts": {
    "build": "node scripts/build.js",
    "build:css": "postcss src/styles.css -o dist/styles.css --minify",
    "build:css:watch": "postcss src/styles.css -o dist/styles.css --watch",
    "watch": "node scripts/build.js --watch",
    "dev": "node scripts/build.js --install",
    "install": "node scripts/install.js",
    "config": "node scripts/config.js",
    "scan": "node scripts/scan-vault.js",
    "generate:icons": "node scripts/generate-icons.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format ."
  },
  "keywords": [],
  "author": "Fran Bosquet",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@biomejs/biome": "^2.3.2",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.9.2",
    "autoprefixer": "^10.4.21",
    "jest": "^30.2.0",
    "lucide-static": "^0.552.0",
    "obsidian": "1.10.2-1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "preact": "^10.27.2",
    "tailwindcss": "^4.1.16",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@blacksmithgu/datacore": "^0.1.24"
  }
}
